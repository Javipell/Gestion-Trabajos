<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Datos del Proveedor">

        <Preference
            android:defaultValue="0"
            android:editable="false"
            android:key="edit_text_id"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Código Proveedor"
            android:summary="Código Proveedor"
            tools:clickable="false" />

        <EditTextPreference
            android:defaultValue=" "
            android:inputType="text"
            android:key="edit_text_nombre"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Nombre del proveedor"
            android:title="Nombre" />
        <EditTextPreference
            android:defaultValue=" "
            android:key="edit_text_logo"
            android:inputType="textUri"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="dirección url del logo"
            android:title="Logo" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Dirección">

        <EditTextPreference
            android:defaultValue=" "
            android:key="edit_text_domicilio"
            android:inputType="textPostalAddress"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Domicilio del Proveedor"
            android:title="Domicilio" />
        <EditTextPreference
            android:defaultValue=" "
            android:key="edit_text_poblacion"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Localidad o Provincia"
            android:title="Población" />
        <EditTextPreference
            android:defaultValue=" "
            android:key="edit_text_codigo_postal"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Código Postal"
            android:title="Código Postal" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Contacto">

        <EditTextPreference
            android:defaultValue=" "
            android:key="edit_text_telefono"
            android:inputType="phone"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Télefono"
            android:title="Télefono" />
        <EditTextPreference
            android:defaultValue=" "
            android:key="edit_text_fax"
            android:inputType="phone"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Fax"
            android:title="Fax" />
        <EditTextPreference
            android:defaultValue=" "
            android:key="edit_text_correo"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Dirección de correo"
            android:title="Email" />
        <EditTextPreference
            android:defaultValue=" "
            android:key="edit_text_contacto"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Persona de contacto"
            android:title="Contacto" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Estado">

        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_estado"
            android:summary="Estado (alta/baja)"
            android:title="Estado" />
        <EditTextPreference
            android:defaultValue=" "
            android:key="edit_text_alta"
            android:inputType="date"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Fecha de alta"
            android:title="Fecha de alta" />
        <EditTextPreference
            android:defaultValue=" "
            android:key="edit_text_baja"
            android:inputType="date"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Fecha de baja"
            android:title="Fecha de baja" />
    </PreferenceCategory>

</PreferenceScreen>