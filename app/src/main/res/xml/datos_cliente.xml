<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Datos del Cliente">

        <Preference
            android:defaultValue="0"
            android:editable="false"
            android:key="edit_text_id"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Código Cliente"
            android:summary="Código Cliente"
            tools:clickable="false" />

        <EditTextPreference
            android:defaultValue=" "
            android:inputType="text"
            android:key="edit_text_nombre"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Nombre del Cliente"
            android:title="Nombre" />
        <EditTextPreference
            android:defaultValue=" "
            android:key="edit_text_identificador"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Código Identificador"
            android:title="Código Identificador" />

    </PreferenceCategory>
    <PreferenceCategory android:title="Dirección">

        <EditTextPreference
            android:defaultValue=" "
            android:key="edit_text_domicilio"
            android:inputType="textPostalAddress"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Domicilio del Cliente"
            android:title="Domicilio" />
        <EditTextPreference
            android:defaultValue=" "
            android:key="edit_text_poblacion"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Localidad o Provincia"
            android:title="Población" />
        <EditTextPreference
            android:defaultValue=" "
            android:key="edit_text_codigo_postal"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Código Postal"
            android:title="Código Postal" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Contacto">

        <EditTextPreference
            android:defaultValue=" "
            android:key="edit_text_telefono"
            android:inputType="phone"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Télefono"
            android:title="Télefono" />

        <EditTextPreference
            android:defaultValue=" "
            android:key="edit_text_contacto"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Persona de contacto"
            android:title="Contacto" />
        <EditTextPreference
            android:defaultValue=" "
            android:key="edit_text_familiar"
            android:inputType="textUri"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Nombre familiar de contacto"
            android:title="Familiar" />
    </PreferenceCategory>

</PreferenceScreen>